#pragma once

#define INFO_PARSE_MAJOR @INFO_PARSE_CLASSIC_VERSION_MAJOR@
#define INFO_PARSE_MINOR @INFO_PARSE_CLASSIC_VERSION_MINOR@
#define INFO_PARSE_PATCH @INFO_PARSE_CLASSIC_VERSION_PATCH@
#define INFO_PARSE_BUILD_DATE "@INFO_PARSE_BUILD_DATE@"
#define INFO_PARSE_WIDE_BUILD_DATE L"@INFO_PARSE_BUILD_DATE@"
#define INFO_PARSE_VERSION "@INFO_PARSE_CLASSIC_VERSION@"
#define INFO_PARSE_WIDE_VERSION L"@INFO_PARSE_CLASSIC_VERSION@"

#include <string>
#include "config.hpp"

namespace info::parse {
  static inline std::string getVersion() {
      if (config::UseBuildTimeInVersion) {
          return INFO_PARSE_VERSION " built on " INFO_PARSE_BUILD_DATE;
      }
      return INFO_PARSE_VERSION;
  }

  static inline std::wstring getWideVersion() {
      if (config::UseBuildTimeInVersion) {
          return INFO_PARSE_WIDE_VERSION L" built on " INFO_PARSE_WIDE_BUILD_DATE;
      }
      return INFO_PARSE_WIDE_VERSION;
  }

#if defined(_WIN32) || defined(_WIN64)
  static inline std::wstring getAutoVersion() {
      return getWideVersion();
#else
  static inline std::string getAutoVersion() {
      return getVersion();
#endif
  }
}
